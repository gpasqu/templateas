<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView_poster"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/titre" android:textStyle="bold" android:textSize="16sp" android:text="titre" android:layout_toRightOf="@id/imageView_poster" android:layout_marginBottom="20dp" android:layout_marginRight="20dp" android:layout_marginEnd="20dp" android:layout_marginTop="10dp" android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/resume" android:textSize="10sp" android:text="resume" android:layout_toRightOf="@id/imageView_poster" android:layout_marginBottom="20dp" android:layout_marginRight="20dp" android:layout_marginEnd="20dp" android:layout_marginTop="40dp" android:layout_marginLeft="16dp" android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/duree"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_poster"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@id/resume"
        android:text="duree"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/premiereDiff"
        android:layout_width="181dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView_poster"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="-101dp"
        android:layout_marginBottom="40dp"
        android:layout_toLeftOf="@id/resume"
        android:text="preDiff"
        android:textSize="10sp" />


</RelativeLayout>